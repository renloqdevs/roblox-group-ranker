# ============================================
# ROBLOX RANKING BOT - CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values
# NEVER share your .env file or commit it to GitHub!
# ============================================

# ============================================
# REQUIRED SETTINGS
# ============================================

# Your Roblox bot account's .ROBLOSECURITY cookie
# Get this from: Browser DevTools > Application > Cookies > .ROBLOSECURITY
# WARNING: This gives full access to the account - use a dedicated bot account!
ROBLOX_COOKIE=_|WARNING:-DO-NOT-SHARE-THIS.--Sharing-this-will-allow-someone-to-log-in-as-you-and-to-steal-your-ROBUX-and-items.|_PASTE_YOUR_COOKIE_HERE

# Your Roblox Group ID
# Find this in your group's URL: https://www.roblox.com/groups/GROUP_ID/
GROUP_ID=12345678

# API Key for authenticating requests (make this a long random string)
# Example: Generate one at https://randomkeygen.com/ (use the 256-bit WEP key)
# Anyone with this key can rank people, so keep it secret!
API_KEY=your-super-secret-api-key-change-this

# ============================================
# OPTIONAL SETTINGS
# ============================================

# Port for the API server (Railway sets this automatically)
# Default: 3000
PORT=3000

# Rate limit: max requests per IP per 15 minutes
# Default: 30
RATE_LIMIT_MAX=30

# Minimum rank that can be set (prevents accidentally setting to Guest/0)
# Default: 1
MIN_RANK=1

# Maximum rank that can be set (your bot cannot rank higher than itself anyway)
# Set this to your bot's rank - 1 for safety
# Default: 255 (no limit beyond bot's own rank)
MAX_RANK=255

# ============================================
# WEBHOOK NOTIFICATIONS (Optional)
# ============================================

# Discord webhook URL for notifications
# Get this from: Discord Server Settings > Integrations > Webhooks > New Webhook
# Leave empty to disable webhook notifications
WEBHOOK_URL=

# ============================================
# SECURITY SETTINGS (Optional)
# ============================================

# IP Allowlist - comma-separated list of allowed IPs
# Leave empty to allow all IPs (default)
# Example: IP_ALLOWLIST=192.168.1.1,10.0.0.1,localhost
IP_ALLOWLIST=

# CORS Origins - comma-separated list of allowed origins
# Leave empty for restrictive same-origin only (recommended for API servers)
# Set to * to allow all origins (not recommended for production)
# Example: CORS_ORIGINS=https://mywebsite.com,https://admin.mywebsite.com
CORS_ORIGINS=

# Enable HSTS (HTTP Strict Transport Security)
# Automatically enabled when NODE_ENV=production
# Set to true to enable in development for testing
ENABLE_HSTS=false

# ============================================
# RATE LIMITING & COOLDOWNS (Optional)
# ============================================

# Per-user rank change cooldown in seconds
# Prevents rapid repeated rank changes on the same user
# Default: 0 (disabled)
# Example: RANK_COOLDOWN_SECONDS=30
RANK_COOLDOWN_SECONDS=0

# ============================================
# AUDIT LOGGING (Optional)
# ============================================

# Enable persistent audit log file
# Default: false (in-memory only)
AUDIT_LOG_FILE=false

# Path to audit log file (only used if AUDIT_LOG_FILE=true)
# Default: ./logs/audit.log
AUDIT_LOG_PATH=./logs/audit.log

# Maximum audit log file size in MB before rotation
# Default: 10
AUDIT_LOG_MAX_SIZE_MB=10

# Maximum in-memory log entries
# Default: 100
AUDIT_LOG_MAX_ENTRIES=100

# ============================================
# LOGGING (Optional)
# ============================================

# Log level: error, warn, info, debug
# Default: info
LOG_LEVEL=info

# Enable timestamps in logs
# Default: true
LOG_TIMESTAMPS=true

# ============================================
# SESSION HEALTH MONITORING (Optional)
# ============================================

# Interval for session health checks in milliseconds
# Verifies the Roblox cookie is still valid
# Lower values = faster detection of expired cookies, but more API calls
# Default: 60000 (1 minute)
SESSION_HEALTH_INTERVAL=60000
